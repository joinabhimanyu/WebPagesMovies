@{
    
    var path=Request.Url.LocalPath;
    var search_display="";

    if(path=="/ListMovies.cshtml" || path=="/ListMovies")
    {
        search_display="block";
    }
    else
    {
        search_display="none";
    }

}

<!DOCTYPE html>
<html>
  <head>
    <title>@Page.Title</title>
    <meta charset="utf-8" name="viewport" content="width=device-width;initial-scale=1.0" />
        <link rel="stylesheet" type="text/css" href="~/Styles/bootstrap.min.css"/>
      <style type="text/css">
          
          html{ height:100%; margin:0; padding:0;width: 100%; }

body {

  font-family:'Trebuchet MS',  'Arial', 'Helvetica', 'sans-serif';
  font-size:10pt;
  background-color: LightGray;
  line-height:1.6em;
}
          
          #header{
  padding:8px;
  width: 100%;
  background-color:#4b6c9e;
  
  color:White;
}
          
          #main{
  width: 100%;
  padding-left: 20px;
  padding-top: 8px;
  padding-bottom:4em;
  background-color:White;
}

#footer{
  width: 100%;
  
  height:2em;
  padding:8px;
  margin-top:-2em;
  background-color:LightGray;
}
          
      </style>
  </head>
  <body>
    <div id="container" style="width: 100%;">

        <div id="header">
          <h1 style="display: inline;">My Movie Site</h1>
            <div class="col-md-4 pull-right" style="display: @search_display;">
                 @RenderPage("~/SearchPage.cshtml")
                 </div>
        </div>
        
        <div id="main">
          @RenderBody()
        </div>
       
        <div id="footer">
          &copy; @DateTime.Now.Year My Movie Site
        </div>

    </div>

      <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
        <script type="text/javascript" src="~/Scripts/jquery-1.10.2.min.js"></script>
  </body>
</html>